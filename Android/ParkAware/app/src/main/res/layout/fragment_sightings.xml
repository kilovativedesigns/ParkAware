<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <!-- Screen title -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:text="Recent Sightings"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Progress -->
        <LinearLayout
            android:id="@+id/stateProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Finding your location…"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- Ask for permission -->
        <LinearLayout
            android:id="@+id/stateAsk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nearby sightings are hidden until you grant location access."
                android:textColor="?attr/colorOnSurfaceVariant" />

            <Button
                android:id="@+id/btnEnableLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Enable Location" />
        </LinearLayout>

        <!-- Denied → open settings -->
        <LinearLayout
            android:id="@+id/stateDenied"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nearby sightings are hidden until you enable location in Settings."
                android:textColor="?attr/colorOnSurfaceVariant" />

            <Button
                android:id="@+id/btnOpenSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Open Settings" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>