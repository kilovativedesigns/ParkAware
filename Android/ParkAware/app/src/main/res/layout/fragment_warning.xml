<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dim overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <!-- Center card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- App logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="@null" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/warning_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/warning_subtitle"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Yellow triangle -->
            <ImageView
                android:id="@+id/triangle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:tint="#FFFF00"
                android:src="@android:drawable/stat_sys_warning"
                android:contentDescription="@null" />

            <!-- Legal -->
            <TextView
                android:id="@+id/legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/warning_legal"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Tips box -->
            <LinearLayout
                android:id="@+id/tipsBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="?attr/colorSurfaceVariant"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tipsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_did_you_know"
                    android:textStyle="bold"
                    android:textColor="#FF3B30"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tipText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/privacyLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_privacy"
                    android:textColor="#007AFF" />

                <TextView
                    android:id="@+id/eulaLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_eula"
                    android:textColor="#007AFF"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- CTA -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/warning_cta" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>