<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme (DayNight, no action bar) -->
    <style name="Theme.ParkAware" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App background -->
        <item name="android:windowBackground">@color/pa_background</item>

        <!-- App-wide font (optional if you have /res/font/roboto.ttf) -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

        <!-- Edge-to-edge: transparent bars; icons handled in code -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- (Optional) Explicit dark variant if you ever want overrides -->
    <style name="Theme.ParkAware.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/pa_background</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- If you need a reusable rounded shape, base it on Material3 -->
    <style name="ShapeAppearance.ParkAware.MediumRound"
        parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>