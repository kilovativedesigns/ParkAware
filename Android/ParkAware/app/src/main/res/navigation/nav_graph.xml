<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/deciderFragment">

    <fragment
        android:id="@+id/deciderFragment"
        android:name="com.kilovativedesigns.parkaware.ui.decider.DeciderFragment"
        android:label="Decider"
        tools:layout="@layout/fragment_decider" />

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.kilovativedesigns.parkaware.ui.auth.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signIn_to_warning"
            app:destination="@id/warningFragment"
            app:popUpTo="@id/deciderFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.kilovativedesigns.parkaware.ui.onboarding.OnboardingFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboarding_to_warning"
            app:destination="@id/warningFragment"
            app:popUpTo="@id/deciderFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/warningFragment"
        android:name="com.kilovativedesigns.parkaware.ui.warning.WarningFragment"
        android:label="Warning"
        tools:layout="@layout/fragment_warning">
        <!-- When user accepts, navigate to Home (which hosts the tabs NavHost) -->
        <action
            android:id="@+id/action_warning_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/deciderFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kilovativedesigns.parkaware.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
</navigation>